{
    "testCases": [
        {
            "id": "TC-INVHUB-11697-01",
            "summary": "Verify single amount filter functionality",
            "preconditions": "User is logged in as investigator and on transaction list page",
            "steps": [
                {
                    "step": "Click on amount filter option",
                    "expectedResult": "Amount filter dropdown is displayed"
                },
                {
                    "step": "Select 'Greater than $1000' option",
                    "expectedResult": "Only transactions over $1000 are shown in the list"
                },
                {
                    "step": "Check transaction count",
                    "expectedResult": "Count reflects number of filtered transactions"
                },
                {
                    "step": "Verify filter indicator",
                    "expectedResult": "Filter indicator is visible in the UI"
                }
            ],
            "postconditions": "Amount filter is successfully applied"
        },
        {
            "id": "TC-INVHUB-11697-02",
            "summary": "Verify multiple concurrent filters functionality",
            "preconditions": "User is logged in as investigator and on transaction list page",
            "steps": [
                {
                    "step": "Apply amount filter for 'Greater than $500'",
                    "expectedResult": "Transactions over $500 are displayed"
                },
                {
                    "step": "Apply date filter for 'Last 7 days'",
                    "expectedResult": "Only transactions matching both amount and date criteria are shown"
                },
                {
                    "step": "Check filter indicators",
                    "expectedResult": "Two separate filter indicators are visible in the UI"
                }
            ],
            "postconditions": "Multiple filters are successfully applied"
        },
        {
            "id": "TC-INVHUB-11697-03",
            "summary": "Verify filter persistence across navigation",
            "preconditions": "User has applied filters to transaction list",
            "steps": [
                {
                    "step": "Navigate to a different page",
                    "expectedResult": "Page navigation is successful"
                },
                {
                    "step": "Return to transaction list page",
                    "expectedResult": "Previously applied filters remain active and results are filtered accordingly"
                }
            ],
            "postconditions": "Filter settings are preserved across navigation"
        },
        {
            "id": "TC-INVHUB-11697-04",
            "summary": "Verify empty results handling",
            "preconditions": "User is on transaction list page",
            "steps": [
                {
                    "step": "Apply filters that result in no matching transactions",
                    "expectedResult": "'No matching transactions' message is displayed"
                },
                {
                    "step": "Verify clear filters option",
                    "expectedResult": "Option to clear filters is visible and clickable"
                }
            ],
            "postconditions": "Empty state handling is properly displayed"
        }
    ]
}